<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/euskalmet</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <mapping class="modelo.Usuarios"></mapping>
        <mapping class="modelo.Provincias"></mapping>
        <mapping class="modelo.Municipios"></mapping>
        <mapping class="modelo.FotosUsuarios"></mapping>
        <mapping class="modelo.FotosEuskalmet"></mapping>
        <mapping class="modelo.Fotos"></mapping>
        <mapping class="modelo.EstacionesMetereologicas"></mapping>
        <mapping class="modelo.EspaciosNaturales"></mapping>
        <mapping class="modelo.CalidadAire"></mapping>
    </session-factory>
</hibernate-configuration>